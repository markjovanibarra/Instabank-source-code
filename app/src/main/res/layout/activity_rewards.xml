<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg2"
    tools:context=".RewardsActivity">

    <TextView
        android:id="@+id/textVdfsdfrdsAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REWARDS"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/reward"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/border_3"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@+id/textVdfsdfrdsAmount">

        <TextView
            android:id="@+id/textViewRewardsAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="â‚±0.00"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewReward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REWARD AMOUNT"
            android:fontFamily="@font/montserrat_light"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextAddAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter amount to add"
            android:fontFamily="@font/montserrat_light"
            android:textColorHint="@color/darkGray"
            android:textColor="@color/black"
            android:background="@drawable/btn_1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="5"/>

        <Button
            android:id="@+id/buttonAddToBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Balance"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/navyBlue"
            app:rippleColor="#04F6C3"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/navigation_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/realcurrency"
        android:elevation="8dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:background="@drawable/border"
            android:gravity="center"
            android:padding="8dp">

            <Button
                android:id="@+id/buttonOption2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/transact"
                android:background="?attr/selectableItemBackground"
                android:gravity="center" />

            <Button
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/home"
                android:background="?attr/selectableItemBackground"
                android:gravity="center" />

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/user"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
