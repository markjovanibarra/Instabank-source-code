<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg5">

    <TextView
        android:id="@+id/textViewPay"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Pay Bills"
        android:gravity="center"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textViewBiller"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Billers"
        android:layout_below="@id/textViewPay"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewBiller"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btnMeralco"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/meralco"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="Meralco"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:rippleColor="#04F6C3"/>

        <Button
            android:id="@+id/btnMaynilad"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/maynilad"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:padding="16dp"
            android:text="Maynilad"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:rippleColor="#04F6C3"/>

        <Button
            android:id="@+id/btnPLDT"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/pldt"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="PLDT"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:rippleColor="#04F6C3"/>

        <Button
            android:id="@+id/btnSkyCable"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/sky_cable"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="Sky Cable"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:rippleColor="#04F6C3"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/layout1"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnNBI"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Coming soon"
            android:fontFamily="@font/montserrat_medium"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/black"
            android:drawableTop="@drawable/nbi"
            android:textSize="10sp"
            android:gravity="center"
            app:rippleColor="#04F6C3"/>

        <Button
            android:id="@+id/btnsss"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Coming soon"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/sss"
            android:padding="16dp"
            android:textSize="12sp"
            android:gravity="center"
            app:rippleColor="#04F6C3"/>

        <Button
            android:id="@+id/btnBIR"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Coming soon"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/bir"
            android:textSize="11sp"
            android:gravity="center"
            app:rippleColor="#04F6C3"/>

        <Button
            android:id="@+id/btnpagibig"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Coming soon"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_medium"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/pagibig"
            android:textSize="10sp"
            android:gravity="center"
            app:rippleColor="#04F6C3"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/navigation_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:background="@drawable/border"
            android:gravity="center"
            android:padding="8dp">

            <Button
                android:id="@+id/buttonOption2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/transact"
                android:background="?attr/selectableItemBackground"
                android:gravity="center" />

            <Button
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/home"
                android:background="?attr/selectableItemBackground"
                android:gravity="center" />

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/user"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>