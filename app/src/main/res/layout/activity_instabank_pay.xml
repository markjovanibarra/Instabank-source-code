<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg2">

    <TextView
        android:id="@+id/textViewPay"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Send Money"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_3"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewInstaBankPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="InstaBank Pay"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Account Number"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="09XXXXXXXXX"
            android:fontFamily="@font/montserrat_light"
            android:textColorHint="@color/darkGray"
            android:textColor="@color/black"
            android:background="@drawable/border"
            android:inputType="phone"
            android:maxLength="11"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Amount"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/editTextAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:fontFamily="@font/montserrat_light"
            android:textColorHint="@color/darkGray"
            android:textColor="@color/black"
            android:background="@drawable/border"
            android:inputType="numberDecimal"
            android:maxLength="6"/>

        <TextView
            android:id="@+id/textViewCurrentBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Current Balance: Php 0.00"
            android:fontFamily="@font/montserrat_light"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/buttonPay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Send"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/navyBlue"
            android:layout_marginTop="30dp"
            app:rippleColor="#04F6C3"/>
    </LinearLayout>
</LinearLayout>
